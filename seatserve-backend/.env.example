# ===========================================
# SeatServe API Configuration
# ===========================================

# Application Settings
APP_NAME=SeatServe API
VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database Configuration
# For development (SQLite - no setup required)
DATABASE_URL=sqlite:///./seatserve.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql+psycopg2://username:password@localhost:5432/seatserve_db
# Or use individual components:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=seatserve_db
# DB_USER=seatserve_user
# DB_PASSWORD=seatserve_password

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120

# Additional API Keys (for future features)
CONCESSION_API_KEY=concession-dev-key
RUNNER_API_KEY=runner-dev-key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# Restaurant Information
RESTAURANT_NAME=SeatServe Restaurant
RESTAURANT_ADDRESS=123 Main Street, City, State 12345
RESTAURANT_PHONE=+1-234-567-8900
RESTAURANT_EMAIL=info@seatserve.com

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Redis Configuration (Optional - for caching/sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads

# Business Logic Configuration
DEFAULT_TAX_RATE=0.08
DEFAULT_SERVICE_CHARGE=0.15
CURRENCY=USD
TIMEZONE=UTC

# Development/Testing Configuration
ENABLE_SWAGGER=true
ENABLE_REDOC=true